# CanonSafe V2 Backend — Environment Variables
# Copy to .env and fill in values

# ── Database ─────────────────────────────────────────────
# Local development (SQLite — no setup needed)
DATABASE_URL=sqlite+aiosqlite:///./canonsafe.db

# Production (Cloud SQL PostgreSQL — set these in Cloud Run env/secrets)
# CLOUD_SQL_CONNECTION_NAME=tpgpt-prod:us-east1:tpg-intel-db
# DB_USER=postgres
# DB_PASS=your-database-password
# DB_NAME=canonsafe

# ── Security ─────────────────────────────────────────────
SECRET_KEY=change-me-in-production

# ── CORS ─────────────────────────────────────────────────
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ── LLM API Keys (optional — for live critic evaluation) ─
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
PRIMARY_LLM=openai

# ── Evaluation Defaults ──────────────────────────────────
# DEFAULT_SAMPLING_RATE=1.0
# RAPID_SCREEN_THRESHOLD=0.7
# DEEP_EVAL_THRESHOLD=0.9
